@page
@model RoleBasedAccessControl.Pages.DeleteUserModel
@{
}

@if (TempData["Message"] is not null)
{
    <div class="alert alert-warning text-center mx-auto col-sm-6" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-sm-6 mx-auto rounded border p-3">
        <form method="post">
            <h2 class="text-center">Delete a User</h2>
            <hr />
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">UserEmail :</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="userEmail" required />
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>

        </form>
    </div>
</div>